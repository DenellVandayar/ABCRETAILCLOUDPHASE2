@{
    ViewData["Title"] = "AddItems";
}
@model Test4712.Models.Item

<h2>Add New Item</h2>
<hr/>

<form asp-action="AddItem" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name of Product:</label>
        <input type="text" name="Name" required placeholder="Name of Product" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description:</label>
        <input type="text" name="Description" required placeholder="Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" name="Price" required placeholder="Price" class="form-control"/>
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Item</button>

</form>