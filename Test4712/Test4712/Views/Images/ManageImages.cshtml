@model List<string>

@{
    ViewData["Title"] = "Manage Images";
}

<h2>Manage Images</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Image Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var blobName in Model)
            {
                <tr>
                    <td>@blobName</td>
                    <td>
                        <form asp-action="DeleteBlob" method="post">
                            <input type="hidden" name="blobName" value="@blobName" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No images found.</td>
            </tr>
        }
    </tbody>
</table>