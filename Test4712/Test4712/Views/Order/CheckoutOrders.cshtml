@{
    ViewData["Title"] = "CheckoutOrders";
}
@model IEnumerable<CheckoutOrder>

<h2>Your Orders</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Item Name</th>
            <th>Item Price</th>
            <th>Attached Documents</th>
            <th>Order Date</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.ItemName</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(order.FileUrl))
                    {
                        {
                            var fileName = order.FileUrl.Split('/').Last();
                            var encodedFileName = Uri.EscapeDataString(fileName);
                        }
                        <a href="@Url.Action("DownloadFile", "Order", new { fileUrl = order.FileUrl })" download>Download File</a>
                    }
                    else
                    {
                        <span>No file</span>
                    }

                <td>@order.Timestamp</td>

            </tr>

        }
    </tbody>
</table>