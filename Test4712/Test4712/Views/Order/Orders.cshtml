@{
    ViewData["Title"] = "Orders";
}
@model IEnumerable<Order>

<h2>My Cart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Item Name</th>
            <th>Item Price</th>
            <th>Attached Documents</th>
            <th>Order Date</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.ItemName</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(order.FileUrl))
                    {
                        {
                            var fileName = order.FileUrl.Split('/').Last();
                            var encodedFileName = Uri.EscapeDataString(fileName);
                        }
                        <a href="@Url.Action("DownloadFile", "Order", new { fileUrl = order.FileUrl })" download>Download File</a>
                    }
                    else
                    {
                        <span>No file</span>
                    }

                <td>@order.Timestamp</td>
                <td>
                    <form asp-action="DeleteOrder" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                        <input type="hidden" name="orderId" value="@order.RowKey" />
                        <button type="submit" class="btn btn-danger">Remove From Cart</button>
                    </form>
                </td>
            </tr>


        }
    </tbody>
</table>

<form asp-action="Checkout" method="post">
    <button type="submit" class="btn btn-primary">Checkout</button>
</form>

@{

    var totalPrice = Model.Sum(order => order.TotalPrice);
}

<div class="text-right">
    <h4>Total Price: @totalPrice.ToString("C")</h4>
</div>